############################################
# üöÄ Approval Health Dashboard ‚Äî Environment
# Focused on Web3 Security & Wallet Safety
############################################

############################
# üåê Runtime / General
############################
NODE_ENV=development
APP_NAME=approval-health
APP_URL=http://localhost:3000

############################
# üóÑÔ∏è Database (Postgres)
############################
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/approval_health"
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=10

# Prisma migration env
PRISMA_LOG_LEVEL=info

############################
# üîó Ethereum & L2 RPC
# Use different keys per chain where possible
############################
RPC_ETHEREUM_MAINNET=
RPC_ARBITRUM_ONE=
RPC_OPTIMISM=
RPC_BASE=

# Optional fallback RPCs
RPC_FALLBACK_ETHEREUM=
RPC_FALLBACK_ARBITRUM=
RPC_FALLBACK_OPTIMISM=
RPC_FALLBACK_BASE=

############################
# üîç Indexer Configuration
############################
# Chains to index (comma separated chain ids: 1,42161,10,8453)
INDEXER_ENABLED_CHAINS=1,42161,10,8453

# Polling interval in milliseconds (5s default dev, increase in prod)
INDEXER_POLL_INTERVAL_MS=5000

# ‚è≥ History Depth Limit
# Set to 30 days as requested
INDEXER_HISTORY_DAYS=30

############################
# üõ°Ô∏è Security & Risk Engine
############################
# Enables risk model scoring (disable only for debugging)
ENABLE_RISK_ENGINE=true

# Default thresholds
RISK_THRESHOLD_HIGH=61
RISK_THRESHOLD_MEDIUM=31

############################
# üß† Metadata / Labeling
############################
ENABLE_METADATA_CACHE=true
METADATA_CACHE_TTL_HOURS=24

############################
# üì¨ Telemetry / Monitoring (Optional)
############################
ENABLE_TELEMETRY=false
SENTRY_DSN=
LOG_LEVEL=info

############################
# üßæ Analytics / History
############################
ENABLE_SCAN_HISTORY=true
ENABLE_REVOCATION_TRACKING=true

############################
# üîí Backend API
############################
API_PORT=4000
API_RATE_LIMIT_PER_MINUTE=200
